<html>
<head>


    <title>@ViewBag.Title - ABSOLİT</title>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
          crossorigin="anonymous" />
    <title>Anasayfa</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    
    <link href="https://fonts.googleapis.com/css2?family=Oxygen:wght@400;700&display=swap"
          rel="stylesheet" />
    <link rel="stylesheet"
          href="https://use.fontawesome.com/releases/v5.0.13/css/all.css"
          integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp"
          crossorigin="anonymous" />
    <link href="https://fonts.googleapis.com/css2?family=Oxygen:wght@400;700&family=Teko:wght@300;400&display=swap"
          rel="stylesheet" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
   
        <div id="social">
            <font style="color:white">ABSOLİT | <span>Doğal Taşlar & Burçlar</span></font>
            <i style="color:white" class="fab fa-instagram"></i>
            <i style="color:white" class="fab fa-facebook-square"></i>
            <i style="color:white" class="fab fa-twitter-square"></i>
            


            <input type="text" class="tbox-search" />
            <a>
                <i style="color:white"  class="fas fa-search"></i>

            </a>
            <div id="container">
                <header>
                    <img id="headerResim" src="~/images/header2.jpg" alt="" />
                    <div id="centered">ABSOLİT </div>
                </header>
               
                    <nav>
                 
                        <ul>

                            <li>@Html.ActionLink("Ana Sayfa", "Index", "Home", new { @class = "fas fa-home" }) </li>
                            <li>@Html.ActionLink("Doğal Taşlar", "DogalTaslar", "Home", new { @class = "fas fa-gem" })</li>
                            <li>@Html.ActionLink("Burçlar", "Burclar", "Home", new { @class = "fas fa-images" })</li>
                            <li>@Html.ActionLink("İletişim", "Iletısım", "Home", new { @class = "fas fa-address-book" })</li>
                            <li>@Html.ActionLink("Giriş Yap", "Login", "Account", null, new { @class= "fas fa-sign-in-alt"})</li>
                            <li>@Html.ActionLink("Hesap Oluştur", "Register", "Account", null, new { @class = "fas fa-user-alt" })</li>
                            <li>@Html.ActionLink("Çıkış Yap", "LogOut", "Account", null, new { @class = "fas fa-sign-out-alt" })</li>


                        </ul>

                    </nav>

                

                <div class="container body-content">
                    <div class="row">
                        <div class="col-md-12">
                            @RenderBody()
                        </div>
                    </div>

                    <hr />

                </div>
                <footer><p>&copy; @DateTime.Now.Year  - Alperen POLAT</p></footer>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
                        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
                        crossorigin="anonymous"></script>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
                        integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
                        crossorigin="anonymous"></script>

   </div>
</body>
</html>
